<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zsx.mapper.ArticleMapper">
    <select id="selectArticleList" resultType="Article">
        SELECT * FROM article
        <where>
            <if test="categoryId != null">
                AND category_id = #{categoryId}
            </if>
            <if test="state != null">
                AND state = #{state}
            </if>
        </where>
    </select>


    <resultMap id="ArticleWithAuthorDTOMap" type="com.zsx.dto.ArticleWithAuthorDTO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="coverImg" column="cover_img"/>
        <result property="pub_date" column="create_time"/>
        <result property="state" column="state"/>
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="createUser" column="create_user"/>
        <result property="username" column="username"/>
        <result property="nickname" column="nickname"/>
    </resultMap>

    <!-- 多表查询 -->
    <select id="getArticleWithAuthorById" resultMap="ArticleWithAuthorDTOMap">
        SELECT
            a.id, a.title, a.content, a.cover_img, a.create_time, a.state,
            a.category_id, c.category_name,
            u.id AS create_user, u.username, u.nickname
        FROM article a
                 LEFT JOIN category c ON a.category_id = c.id
                 LEFT JOIN user u ON a.create_user = u.id
        WHERE a.id = #{articleId}
    </select>


</mapper>
